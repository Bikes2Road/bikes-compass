{
    "swagger": "2.0",
    "info": {
        "description": "This is the docs of Bikes 2 Road API.",
        "title": "Bikes 2 Road API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8081",
    "basePath": "/v1/bikes",
    "paths": {
        "/search": {
            "get": {
                "description": "This service extract all bikes with pagination, you can search bikes by name, or all bikes",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Market"
                ],
                "summary": "Search Bikes",
                "parameters": [
                    {
                        "minimum": 1,
                        "type": "integer",
                        "description": "page that you want extract",
                        "name": "page",
                        "in": "query"
                    },
                    {
                        "maximum": 30,
                        "type": "integer",
                        "description": "cant bikes you want extract",
                        "name": "cant",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "example": "Yamaha",
                        "description": "name of byke that you want search",
                        "name": "name",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/domain.GetAllResponseSuccess"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/domain.ResponseHttpError"
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "schema": {
                            "$ref": "#/definitions/domain.ResponseHttpError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/domain.ResponseHttpError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/domain.ResponseHttpError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "domain.GetAllResponseSuccess": {
            "type": "object",
            "required": [
                "data",
                "success",
                "total"
            ],
            "properties": {
                "data": {
                    "description": "Lista de motos encontradas",
                    "type": "array",
                    "items": {
                        "type": "object"
                    }
                },
                "success": {
                    "description": "Indica si la petición fue exitosa",
                    "type": "boolean",
                    "example": true
                },
                "total": {
                    "description": "Número total de registros encontrados",
                    "type": "integer",
                    "example": 10
                }
            }
        },
        "domain.ResponseHttpError": {
            "type": "object",
            "required": [
                "code",
                "error",
                "message",
                "success"
            ],
            "properties": {
                "code": {
                    "description": "Código de error HTTP",
                    "type": "integer",
                    "example": 400
                },
                "error": {
                    "description": "Identificador del tipo de error",
                    "type": "string",
                    "example": "bad_request"
                },
                "message": {
                    "description": "Mensaje descriptivo del error",
                    "type": "string",
                    "example": "error with request"
                },
                "success": {
                    "description": "Indica si la operación fue exitosa (en este caso false)",
                    "type": "boolean",
                    "example": false
                }
            }
        }
    }
}